#!/bin/sh
set -e

cd "$(dirname "$0")/.."
ROOT=$(pwd)

if [ -z "$VENV_NAME" ]; then
    VENV_NAME="env"
fi

ACTIVATE="$VENV_NAME/bin/activate"
if [ ! -f "$ACTIVATE" ]; then
    echo "$ACTIVATE does not exist, run ./script/bootstrap" >&2
    exit 1
fi
. "$ACTIVATE"

cd docs

builder=$1
if [ -n "$builder" ]; then
    shift
else
    builder=html
fi

build="_build/${builder}"
rm -rf "$build"

sphinx-build --builder "$builder" --conf-dir . "source/" "$build" "$@"
